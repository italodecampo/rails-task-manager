<h1>Tasks</h1>

<%= link_to "Create New Task", new_task_path%>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= link_to task.title, task_path(task) %> - <%= task.completed ? "Completed" : "Not completed" %><br>
      <%= button_to "Delete", task_path(task), method: :delete, data:{turbo_method: :delete, turbo_confirm: "Are you sure?"}%><br>
    </li>
  <% end %>
</ul>
