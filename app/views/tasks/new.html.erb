<h1>New Task</h1>

<%= form_with model: @task, url: tasks_path, method: :post do |f| %>
  <div>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :details %><br>
    <%= f.text_area :details %>
  </div>

  <div>
    <%= f.submit "Create Task" %>
  </div>
<% end %>

<%= link_to "Back to list", tasks_path %>
